<h3>Hello User </h3> 

<% if @user && @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <ul class="errors">
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %>
<div></div>
<%= form_tag "/users", method: :post do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @user.name, class: "form-control"  %>
</div>

<div>
  <%= label_tag :email %>
  <%= text_field_tag :email, @user.email, class: 'form-control' %>
</div>

<div>
  <%= label_tag :phone_number %>
  <%= text_field_tag :phone_number, @phone_number, class: 'form-control' %>
</div>

<div>
  
  <%= hidden_field_tag :balanit, false %>
</div>

<div>
  <%= label_tag :password %>
  <%= password_field_tag :password , "", class: 'form-control'%>
</div>

<div>
  <%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation, "", class: 'form-control' %>
</div>

<%= submit_tag "Submit!" %>

<% end %>