<h1>Update Informetion</h1>

<% if @user && @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <ul class="errors">
      <li><%= message %></li>
    </ul>
  <% end %>
<% end %> 

<%= form_tag "/users/#{@user.id}", method: :patch do %>

<div >
  <%= label_tag :name %>
  <%= text_field_tag :name, @user.name, class: "form-control"  %>
</div>

<div>
  <%= label_tag :email %>
  <%= text_field_tag :email, @user.email, class: 'form-control' %>
</div>

<div>
  <%= label_tag :phone_number %>
  <%= text_field_tag :phone_number, @user.phone_number, class: 'form-control' %>
</div>

<div class="field">
  <%= label_tag :image %><br>
  <%= file_field_tag :image %>
</div>

<%= submit_tag "Submit!" %>

<% end %>