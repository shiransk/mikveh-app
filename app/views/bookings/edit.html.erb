<%= form_tag "/bookings/#{@booking.id}", method: :patch do %>

<% if current_user && current_user.balanit %>
    <div>
      <%= hidden_field_tag :mikveh_id, current_user.mikveh.id %>
    </div>  
<% else %>
    <div>
      <%= hidden_field_tag :mikveh_id, current_user.bookings.last.mikveh.id %>
    </div>
<% end %>
 
<% if current_user && current_user.balanit %>
    <div>
      <%= hidden_field_tag :user_id, @booking.user.id %>
    </div>
<% else %>
    <div> 
      <%= hidden_field_tag :user_id, current_user.id %>
    </div>
<% end  %>

<div>
  <%= label_tag :date_and_time %>
  <%= text_field_tag :date_and_time, @booking.date_and_time  %>
</div>

<%= submit_tag "Submit" %>

<% end %>
