<table class="table table-hover">
  <tr>
    <th>Post Subject</th>
    <th>Post Content</th>
    <th>Post comment</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.subject %></td>
      <td><%= post.text %></td>
      <td><%= post.comments.first.text if post.comments.any? %></td>
    </tr>
  <% end %>
</table>