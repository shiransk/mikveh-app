<h1>Edit Message</h1>

<%= form_tag "/posts/#{@post.id}", method: :patch do %>


<div>
  <%= label_tag :text %>
  <%= text_area_tag :text, @post.text, class: 'form-control area_text' %>
</div>

<div>
  <%= hidden_field_tag :user_id, current_user.id, class: 'form-control' %>
</div>

</div>
  

<%= submit_tag "Submit!" %>

<% end %>