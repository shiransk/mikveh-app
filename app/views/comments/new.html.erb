<h1>Comment on Post</h1>
<%= form_tag '/comments', method: :post do %>

<div >
  <%= label_tag :text %>
  <%= text_area_tag :text, '', class: "form-control area_text"  %>
</div>

<div>
  <%= hidden_field_tag :post_id, @post_id, class: 'form-control' %>
</div>


<%= submit_tag "Submit!" %>

<% end %>
